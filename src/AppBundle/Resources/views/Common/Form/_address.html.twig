<div class="form-group row" data-url="{{ path('sylius_shop_ajax_render_province_form') }}">
    {% if form.provinceCode is defined %}
        <label class="col-md-3 form-control-label required">
            {{ form_label(form.provinceCode) }}
        </label>
        <div class="col-md-6">
            {{ form_row(form.provinceCode, {'attr': {'class': 'form-control form-control-select js-country'}}) }}
        </div>
    {% elseif form.provinceName is defined %}
        <label class="col-md-3 form-control-label required">
            {{ form_label(form.provinceName) }}
        </label>
    <div class="col-md-6">
    {{ form_row(form.provinceName, {'attr': {'class': 'form-control form-control-select js-country'}}) }}
    </div>
    {% endif %}

    {% if form.provinceCode is defined %}
        <div class="col-md-3 form-control-comment">
            {{ form_errors(form) }}
        </div>
    {% endif %}
</div>

