{% if last_error %}
    {{ messages.error(last_error.messageKey|trans(last_error.messageData, 'security')) }}
{% endif %}

{#{{ form_row(form._username) }}#}
{#{{ form_row(form._password) }}#}
{#{{ form_row(form._remember_me) }}#}


    <section>
        <input type="hidden" name="back" value="my-account">
        <div class="form-group row ">
            <label class="col-md-3 form-control-label required">
                {{ form_label(form._username) }}
            </label>
            <div class="col-md-6">
                {{ form_widget(form._username,{'attr':{'class':'form-control','name':'email','type':'email'}}) }}

            </div>
            <div class="col-md-3 form-control-comment">
                {{ form_errors(form._username) }}
            </div>
        </div>
        <div class="form-group row ">
            <label class="col-md-3 form-control-label required">
                {{ form_label(form._password) }}
            </label>
            <div class="col-md-6">
                <div class="input-group js-parent-focus">
                    {{ form_widget(form._password,{'attr':{'class':'form-control js-child-focus js-visible-password','name':'password','type':'password'}}) }}
                    <span class="input-group-btn">
            <button class="btn" type="button" data-action="show-password" data-text-show="Show" data-text-hide="Hide">
                Show
            </button>
          </span>
                </div>
            </div>
            <div class="col-md-3 form-control-comment">
                {{ form_errors(form._password) }}
            </div>
        </div>

        <div class="forgot-password">
            <a href="{{ path('sylius_shop_request_password_reset_token') }}" rel="nofollow">
                {{ 'sylius.ui.forgot_password'|trans }}             </a>
        </div>
    </section>
    <footer class="form-footer text-xs-center clearfix">
        <input type="hidden" name="submitLogin" value="1">
        <button class="btn btn-primary" data-link-action="sign-in" type="submit">
            {{ 'sylius.ui.login'|trans }}
        </button>
    </footer>
