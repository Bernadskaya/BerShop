<section>
    <input type="hidden" name="id_customer" value="">
    <div class="form-group row ">
        <label class="col-md-3 form-control-label">
            {{ form_label(form.firstName) }}
        </label>

        <div class="col-md-6">
            {{ form_widget(form.firstName,{'attr':{'class':'form-control','name':'lastname','type':'text'}}) }}
        </div>
        <div class="col-md-3 form-control-comment">
            {{ form_errors(form.firstName) }}
        </div>
    </div>
    <div class="form-group row ">
        <label class="col-md-3 form-control-label">
            {{ form_label(form.lastName) }}
        </label>

        <div class="col-md-6">
            {{ form_widget(form.lastName,{'attr':{'class':'form-control','name':'lastname','type':'text'}}) }}
        </div>
        <div class="col-md-3 form-control-comment">
            {{ form_errors(form.lastName) }}
        </div>
    </div>
    <div class="form-group row ">
        <label class="col-md-3 form-control-label">
            {{ form_label(form.email) }}
        </label>

        <div class="col-md-6">
            {{ form_widget(form.email,{'attr':{'class':'form-control','name':'lastname','type':'email'}}) }}
        </div>
        <div class="col-md-3 form-control-comment">
            {{ form_errors(form.email) }}
        </div>
    </div>
    <div class="form-group row ">
        <label class="col-md-3 form-control-label">
            {{ form_label(form.phoneNumber) }}
        </label>

        <div class="col-md-6">
            {{ form_widget(form.phoneNumber,{'attr':{'class':'form-control','name':'lastname'}}) }}
        </div>
        <div class="col-md-3 form-control-comment">
            {{ form_errors(form.phoneNumber) }}
        </div>
    </div>


    <div class="form-group row ">
        <label class="col-md-3 form-control-label">
        </label>
        <div class="col-md-6">
            <span class="custom-checkbox">
          <input name="optin" type="checkbox" value="1">
          <span><i class="material-icons checkbox-checked">{{ form_widget(form.subscribedToNewsletter) }}</i></span>
          <label>
              {{ form_label(form.subscribedToNewsletter) }}
          </label>
        </span>
        </div>
        <div class="col-md-3 form-control-comment">
            {{ form_errors(form.subscribedToNewsletter) }}
        </div>
    </div>

    <div class="form-group row ">
        <label class="col-md-3 form-control-label required">
            {{ form_label(form.user.plainPassword.first) }}
        </label>
        <div class="col-md-6">
            <div class="input-group js-parent-focus">
                {{ form_widget(form.user.plainPassword.first,{'attr':{'class':'form-control js-child-focus js-visible-password','name':'password','type':'password'}}) }}
                <span class="input-group-btn">
            <button class="btn" type="button" data-action="show-password" data-text-show="Show" data-text-hide="Hide">
                Show
            </button>
          </span>
            </div>
        </div>
        <div class="col-md-3 form-control-comment">
        </div>
    </div>

    <div class="form-group row ">
        <label class="col-md-3 form-control-label required">
            {{ form_label(form.user.plainPassword.second) }}
        </label>
        <div class="col-md-6">
            <div class="input-group js-parent-focus">
                {{ form_widget(form.user.plainPassword.second,{'attr':{'class':'form-control js-child-focus js-visible-password','name':'password','type':'password'}}) }}
                <span class="input-group-btn">
            <button class="btn" type="button" data-action="show-password" data-text-show="Show" data-text-hide="Hide">
                Show
            </button>
          </span>
            </div>
        </div>
        <div class="col-md-3 form-control-comment">
        </div>
    </div>



</section>

