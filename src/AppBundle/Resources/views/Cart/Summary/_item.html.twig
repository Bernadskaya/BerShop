                  {{ money.convertAndFormat(item.unitPrice) }}
                  {{ money.convertAndFormat(item.subtotal) }}
              </strong>
            </span>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-xs-2 text-xs-right">
            <div class="cart-line-product-actions ">
                <a class="remove-from-cart" rel="nofollow" href="{{ path('sylius_shop_cart_item_remove', {'id': item.id}) }}" data-link-action="delete-from-cart" data-id-product="1" data-id-product-attribute="5" data-id-customization="">
                    <i class="material-icons float-xs-left">delete</i>
                </a>

            </div>
        </div>
